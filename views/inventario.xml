<odoo>
    <data>
        <record id="inventario" model="ir.ui.view">
            <field name="name">materiales.inventario.tree</field>
            <field name="model">materiales.inventario</field>
            <field name="type">tree</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">  
                <tree string="Tree view name">
                    <field name="producto_id"/>
                    <field name="cantidad"/>
                </tree>
            </field>
        </record>

        <record id="inventario_form" model="ir.ui.view">
            <field name="name">materiales.inventario.form</field>
            <field name="model">materiales.inventario</field>
            <field name="type">form</field>
            <field name="priority">11</field>
            <field name="arch" type="xml">  
                <form string="Form view name">
                <sheet>
                    <group>
                        <field name="producto_id"/>
                        <field name="cantidad"/>
                    </group>
                </sheet>
                </form>
            </field>
            </record> 

            <record id="inventario_search" model="ir.ui.view">
            <field name="name">materiales.inventario.search</field>
            <field name="model">materiales.inventario</field>
            <field name="priority">12</field>
            <field name="arch" type="xml">
                <search>
                    <field name="producto_id"/>
                    <field name="cantidad"/>
                </search>
            </field>
            </record>

            <record id="inventario_kanban" model="ir.ui.view">
            <field name="name">materiales.inventario.kanban</field>
            <field name="model">materiales.inventario</field>
            <field name="priority">13</field>
            <field name="arch" type="xml">
                <kanban>
                <templates>
                    <t t-name="kanban-box">
                    <div>
                        <ul>
                        <group>
                            <li t-if="record.producto_id.raw_value">Producto: <field name="producto_id"/></li>
                            <li t-if="record.cantidad.raw_value">Cantidad: <field name="cantidad"/></li>
                        </group>
                        </ul>
                    </div>
                    </t>
                </templates>
                </kanban>
            </field>
            </record>

            <record id="inventario_action" model="ir.actions.act_window">
            <field name="name">inventario</field>
            <field name="res_model">materiales.inventario</field>
            <field name="views_type">form</field>
            <field name="view_mode">tree,kanban,form,search</field>
        </record> 
    </data>
</odoo>